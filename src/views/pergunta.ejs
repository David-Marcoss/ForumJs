<%- include ('partials/header')%>
<body>
    <%- include ('partials/navbar')%>
    
    <div class="container" id="home-conteudo">
        <br>
        <h1><%= pergunta.titulo %></h1>
        <p> <%= pergunta.descricao %></p>
        <p>Criada em : <%= pergunta.createdAt%></p>
        <hr>
        <br>

        <form method="POST" action="/respostas">

            <label> Responder: </label>
            <textarea name="corpo" rows="5" class="form-control" placeholder="Sua Resposta"></textarea>
            
            <input type="hidden" value="<%= pergunta.id%>" name="perguntaId">
            <br>
            <button class="btn btn-primary"> Salvar </button>

        </form>

        <% if (respostas){ %>
            <hr>
            <h2> Respostas: </h2>
            <hr>
            <% respostas.forEach( resposta => {%>
                <div class="card">
                    <div class="card-header">
                        Respondida em : <%= resposta.createdAt %>
                    </div>
                    <div class="card-body">
                        <p> <%= resposta.corpo %></p>
                    </div>
                </div>
                <br>
            <%})%>
        
        <% }%>
        
    </div>

</body>


<%- include ('partials/footer')%>